<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="2dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="#B3FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/layout_reviews_line">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvWritedate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="2021-10-03"
                android:textColor="#B4AB9A"/>
            <TextView
                android:id="@+id/tvWritername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Writername"
                android:textColor="#756A57" />
        </RelativeLayout>

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/customStarRatingBar"
            android:contentDescription="별점"
            android:isIndicator="true"
            android:max="5"
            android:numStars="5"
            android:rating="5" />

        <TextView
            android:id="@+id/tvRContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:text="My Review contents. Very good."
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#B4AB9A"
            android:textSize="13dp"
            android:singleLine="true"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.JoinActivity">

    <!-- 로그인 박스 #RelativeLayout:centerInParent -->

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/purple_200"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/layoutLogin"
        android:layout_width="0dp"
        android:layout_height="630dp"

        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/layout_joinbackground_round"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <!-- ID 박스 -->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="139dp"
            android:layout_height="61dp"
            android:text="Sign up"
            android:textSize="36dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/layout_content_roundcorner">

            <ImageView
                android:layout_width="44dp"
                android:layout_height="48dp"
                app:srcCompat="@drawable/ic_email_lightpurple" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="5dp"
                android:hint="Email"
                android:paddingLeft="3dp"
                android:textColor="#3B025E"
                android:textSize="25dp" />
        </LinearLayout>

        <!-- Password 박스 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_content_roundcorner">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="48dp"
                app:srcCompat="@drawable/ic_lock_lightpurple" />

            <EditText
                android:id="@+id/etPw"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="5dp"
                android:hint="Password"
                android:paddingLeft="3dp"
                android:textColor="#3B025E"
                android:textSize="25dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_content_roundcorner">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="44dp"
                android:layout_height="48dp"
                app:srcCompat="@drawable/ic_user" />

            <EditText
                android:id="@+id/etUser"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="5dp"
                android:hint="Username"
                android:paddingLeft="3dp"
                android:textColor="#3B025E"
                android:textSize="25dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/etLo"
            android:layout_width="377dp"
            android:layout_height="59dp"
            android:ems="10"
            android:hint="도/시/동"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnSignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/layout_button_roundcorner"
            android:text="Sign Up"
            android:textSize="25dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>